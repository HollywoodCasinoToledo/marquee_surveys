<%= form_for :votes, url: {controller: :votes, action: :create, parents: @parents}, method: :post do |f| %>
<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12 col-lg-8">
		<div class="panel panel-default push-up-20">
			<div class="panel-heading">
        <h3 class="panel-title"><%= @question.title %></h3>
      </div>
			<div class="panel-body">
				<div id="star_rankings" class="row">
				<% @answers.each do |a| %>
					<div class="col-md-1 col-sm-1 col-xs-1 col-lg-1 tr-clickable star-rank-holder">
            <div class="star-ranks <%= 'selected' if session[:id] && @voted_a_ids.include?(a.id) %>" data-answer_id="<%= a.id %>" data-rate="<%= a.title %>"><span class="fa fa-star"></span></div><br>
            <div class="centered"><%= a.title %></div>
            <%= f.check_box a.id, value: nil, class: 'hidden'  %>
          </div>
        <% end %>
        </div>
        <%= f.hidden_field :answer_rate, id: 'answer_rate'  %>
			</div>

			<div class="panel-footer">
				<% if session[:id] && !@voted_a_ids.empty? %>
					<% if @next_question.nil? %>
						<%= form_for :votes, url: {controller: :votes, action: :update}, method: :patch do |f| %>
		       		<%= link_to 'Finish', {controller: :votes, action: :confirm, question_id: @first_question.id }, class: 'btn btn-primary pull-right'  %>
		      	<% end %>
	       	<% else %>
	       		<%= form_for :votes, url: {controller: :votes, action: :update}, method: :patch do |f| %>
		       		<%= f.submit 'Change', class: 'btn btn-primary pull-right' if @question.revote %>
		      	<% end %>
	       	<% end %>
						<div class="btn btn-warning pull-right push-left-8">You have already voted: <b class="push-right-8"><%= @voted_a_titles*', ' %> </b></div>
				<% else %>
					<% if @next_question.nil? %>
	       		<%= f.submit 'Finish', class: 'btn btn-primary pull-right' %>
	       	<% else %>
	       		<%= f.submit 'Vote', class: 'btn btn-primary pull-right' %>
	       	<% end %>
				<% end %>
				<%= link_to 'Skip', {controller: :questions, action: :show, id: @next_question.id, parents: @parents}, class: 'btn btn-primary' if !@next_question.nil? && !@question.revote %>
			</div>
		</div>
	</div>
</div>
<% end %>